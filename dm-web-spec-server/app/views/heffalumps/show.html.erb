<%- model_class = Heffalump -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
  <dd><%= @heffalump.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @heffalump.color %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_spots) %>:</strong></dt>
  <dd><%= @heffalump.num_spots %></dd>
  <dt><strong><%= model_class.human_attribute_name(:striped) %>:</strong></dt>
  <dd><%= @heffalump.striped %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              heffalumps_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_heffalump_path(@heffalump), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              heffalump_path(@heffalump),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
